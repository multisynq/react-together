{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "types": [
      "vite/client",
      "@modyfi/vite-plugin-yaml/modules",
    ],
    "lib": ["es2022", "DOM"],
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@*": ["./src/*"],
      "@/*": ["./src/*"],
      "@package": ["./package.json"],
      "@hooks/*": ["./src/hooks/*"],
      "@pages/*": ["./src/pages/*"],
      "@utils/*": ["./src/utils/*"],
      "@types/*": ["./src/types/*"],
      "@images/*": ["./src/images/*"],
      "@styles/*": ["./src/styles/*"],
      "@config/*": ["./src/config/*"],
      "@components/*": ["./src/components/*"],
      "@shadcn/*": ["./src/components/ui/*"],
      "@shadcn": ["./src/components/ui/index"],
    }
  }
}
